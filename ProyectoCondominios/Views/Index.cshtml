@model List<DataModels.PviProyectoFinalDBStoredProcedures.SpObtenerCobrosConPersonasResult>
@{
    ViewBag.Title = "Index";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cobros Management</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .center {
            text-align: center;
        }

        .bold {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Gestionar Cobros</h1>
    <div>
        <label for="cliente">Seleccione un cliente:</label>
        <select id="cliente" name="cliente">
            <option value="">Seleccione un cliente</option>
            <!-- Populate with client options -->
        </select>

        <label for="año">Seleccione un año:</label>
        <select id="año" name="año">
            <option value="">Seleccione un año</option>
            <!-- Populate with year options -->
        </select>

        <label for="mes">Seleccione un mes:</label>
        <select id="mes" name="mes">
            <option value="">Seleccione un mes</option>
            <!-- Populate with month options -->
        </select>
    </div>

    <button id="nuevoCobro">Nuevo Cobro</button>

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th class="bold center"># Cobro</th>
                <th class="bold">Cliente</th>
                <th class="bold center"># Casa</th>
                <th class="bold">Periodo</th>
                <th class="bold center">Estado</th>
                <th class="bold center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Populate with cobros data -->
            <tr>

                @foreach (var cobros in Model)
                {
                <tr>
                    <td>@cobros.IdCobro</td>
                    <td>@cobros.IdCasa</td>
                    <td>@cobros.NombrePersona</td>
                    <td>@cobros.Fecha</td>
                    <td>@cobros.Estado</td>
                    <td>
                        @Html.ActionLink("Modificar", "Crear", "Cobros" new { id = es.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </body>
